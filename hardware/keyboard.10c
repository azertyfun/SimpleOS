:pressAnyKey
	JSR clearKeyBuffer
	SET C, 0
	:PAKLoop
	SET A, 1
	HWI [keyboard_address]
		IFN C, 0
			SET PC, POP
	SET PC, PAKLoop


:clearKeyBuffer
	SET A, 0
	HWI [keyboard_address]
	SET PC, POP