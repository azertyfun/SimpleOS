;---------------------------------------------
;STRCMP return 0 in Z if the strings at A and at B are different
;---------------------------------------------
:strcmp
set Z,0
sub A,1
sub B,1
:sc
add A,1
add B,1
ifn [A],0
ifn [B],0
ife [A],[B]
set PC,sc
ife [A],[B]
set Z,1
set PC,pop